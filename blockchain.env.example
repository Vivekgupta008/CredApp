# Blockchain Configuration for CredHub
# Copy this file to blockchain.env and update with your actual values

# Blockchain Network Configuration
BLOCKCHAIN_NETWORK=amoy
BLOCKCHAIN_RPC_URL=https://rpc-amoy.polygon.technology
BLOCKCHAIN_CHAIN_ID=80002

# Contract Addresses (from your deployment)
ISSUER_REGISTRY_ADDRESS=0x5868c5Fa4eeF9db8Ca998F16845CCffA3B85C472
CREDENTIAL_REGISTRY_ADDRESS=0xE70530BdAe091D597840FD787f5Dafa7c6Ef796A

# Private Key for Blockchain Transactions
# IMPORTANT: Keep this secure and never commit to version control
# This should be the private key of the account that deployed the contracts
BLOCKCHAIN_PRIVATE_KEY=your_private_key_here

# QR Code Configuration
QR_BASE_URL=https://your-domain.com
QR_VERIFICATION_ENDPOINT=/api/v1/verify/qr

# Optional: Gas Configuration
GAS_LIMIT=500000
GAS_PRICE_MULTIPLIER=1.2

# Optional: Transaction Timeout
TRANSACTION_TIMEOUT=300

# Optional: Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=5
